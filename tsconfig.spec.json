/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/spec",
    "composite": true,
    "paths": {
      "@typescript-package/collection-adapter": ["./node_modules/@typescript-package/collection-adapter"],
      "@typescript-package/data": ["./node_modules/@typescript-package/data"] 
    },
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.spec.ts"
  ]
}
